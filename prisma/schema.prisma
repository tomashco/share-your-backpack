generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Post {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  content   String   @db.VarChar(255)
  authorId  String

  @@index([authorId])
}

model Pack {
  id        String     @id @unique @default(cuid())
  createdAt DateTime   @default(now())
  name      String     @db.VarChar(255)
  authorId  String
  packItems PackItem[]
}

model PackItem {
  id         String     @id @unique @default(cuid())
  name       String
  pack       Pack[]
  categories Category[]
}

model Category {
  id        String     @id @unique @default(cuid())
  name      String
  packItems PackItem[]
}
